<h1>Wedding Guests</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Flight number</th>
      <th>Flying from</th>
      <th>Flying to</th>
      <th>Flying in</th>
      <th>Flying out</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.flight_number %></td>
        <td><%= person.flying_from %></td>
        <td><%= person.flying_to %></td>
        <td><%= person.flying_in %></td>
        <td><%= person.flying_out %></td>
        <td><%= person.notes %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Guest', new_person_path %>
<% end %>
