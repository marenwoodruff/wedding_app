<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@person), html: { multipart: true } do |f| %>
      <% if @person.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

          <ul>
          <% @person.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= image_tag(@user.avatar_url) if @user.avatar? %>
        <%= f.file_field :avatar, class: "form-control" %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class="form-group">
        <%= f.label :flight_number %><br>
        <%= f.number_field :flight_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :flying_from %><br>
        <%= f.text_field :flying_from, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :flying_to %><br>
        <%= f.text_field :flying_to, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :flying_in %><br>
        <%= f.date_select :flying_in, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :flying_out %><br>
        <%= f.date_select :flying_out, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :notes %><br>
        <%= f.text_area :notes, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
<br />
