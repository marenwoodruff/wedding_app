<h1>Guests</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Roles</th>
      <th>Phone Number</th>
      <th>Email</th>
      <% if user_signed_in? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image, width: '75px', height: '75px' %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= raw user.roles %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.email %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if user_signed_in? %>
  <%= link_to 'New Hotel', new_hotel_path %>
<% else %>
  <p><%= link_to 'Sign in', new_user_session_path %> to add/edit/delete a user!</p>
<% end %>
